<div class="container">
  <div id="vehicleCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% current_user.vehicles.each_with_index do |vehicle, index| %>
        <div class="carousel-item <%= 'active' if index.zero? %>">
          <% if vehicle.photo.attached? %>
            <%= cl_image_tag vehicle.photo.key, crop: :fill, class: "w-75 p-3" %>
          <% end %>
          <div class="carousel-caption d-none d-md-block">
            <h5><%= vehicle.name %></h5>
            <p><%= vehicle.description %></p>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Cat√©gorie : <%= vehicle.category %></li>
              <li class="list-group-item">Prix : <%= vehicle.price %> euros</li>
            </ul>
            <div>
              <%= link_to "Modify", edit_vehicle_path(vehicle.id), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#vehicleCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#vehicleCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <%= link_to "Add", new_vehicle_path, class: "btn btn-primary" %>
</div>
