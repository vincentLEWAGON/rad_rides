<div class="container mt-5">
  <div class="row">
    <% current_user.vehicles.each do |vehicle| %>
      <!-- Carte 1 -->
      <div class="col-md-3 mb-3">
          <div class="card">
              <img src="https://fakeimg.pl/600x400/041211/edb6e9?text=VEHICULE&font=museo" class="card-img-top" alt="Image de la carte">
              <div class="card-body">
                  <h5 class="card-title"><%= vehicle.name %></h5>
                  <p class="card-text"><%= vehicle.description %></p>
                  <%= link_to "détails", vehicle_path(vehicle) %>
              </div>
          </div>
      </div>
    <% end %>
  </div>
</div>





